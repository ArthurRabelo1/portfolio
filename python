import random

nomes = ["arthur", "lapa", "heitor"]
produtos = ["livro", "mouse", "comida"]
random.shuffle(produtos)

# Associa cada nome com um produto embaralhado
for nome, produto in zip(nomes, produtos):
    print(f"O {nome} ganhou um {produto}")


