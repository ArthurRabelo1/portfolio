ano_nascimento = int(input("Em que ano você nasceu? "))
mes1 = int(input("Você fez aniversário este ano? (Se sim coloque 1, se não coloque 0): "))
idade = 2025 - ano_nascimento - mes1

print(f"\nSe você nasceu em {ano_nascimento}, então sua idade é {idade} anos.")





inicio = int(input("Acerte o número de 1 - 50, digite um número de 1 a 50: "))
numero = random.randint(1, 50)

print(f"\nO número que você escolheu foi {inicio} e o número sorteado foi {numero}")

if inicio == numero:
    print("\nParabéns! Você acertou o número!")
else:
    print("\nQue pena! Tente novamente.")


import random

opcoes = ["Pedra", "Papel", "Tesoura"]

jogada_usuario = input("Escolha Pedra, Papel ou Tesoura: ").capitalize()
jogada_computador = random.choice(opcoes)

print(f"Você escolheu: {jogada_usuario}")
print(f"O computador escolheu: {jogada_computador}")

if jogada_usuario == jogada_computador:
    print("Empate!")
elif (jogada_usuario == "Pedra" and jogada_computador == "Tesoura") or \
     (jogada_usuario == "Papel" and jogada_computador == "Pedra") or \
     (jogada_usuario == "Tesoura" and jogada_computador == "Papel"):
    print("Você venceu!")
else:
    print("Computador venceu!")





jogador = int(input("insira um numero de 1 a 10: "))
pc = random.randint(1, 10)

print(f"O usuário escolheu o número {jogador}")
print(f"O bot escolheu o número {pc}")

if jogador == pc:
    print("jogador acertou")
else:
    print("jogador errou")




import random

opcoes = ["arthur", "raphael", "lapa", "heitor"]
nome_sorteado = random.choice(opcoes)
print(f"O nome sorteado foi {nome_sorteado}")




import random

nomes = ["arthur", "lapa", "heitor"]
produtos = ["livro", "mouse", "comida"]
random.shuffle(produtos)

# Associa cada nome com um produto embaralhado
for nome, produto in zip(nomes, produtos):
    print(f"O {nome} ganhou um {produto}")


